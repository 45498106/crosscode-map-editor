{
  "name": "crosscode_map_editor",
  "version": "0.1.0",
  "description": "edit stuff",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint && npm run copy-static-assets",
    "serve": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "test": "jest --forceExit",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c ./tslint.json -p tsconfig.json",
    "copy-static-assets": "node copyStaticAssets.js",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "async": "^2.6.0",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.2",
    "compression": "^1.7.2",
    "connect-mongo": "^2.0.1",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "errorhandler": "^1.4.3",
    "express": "^4.16.3",
    "express-flash": "^0.0.2",
    "express-session": "^1.15.6",
    "express-validator": "^5.1.2",
    "fbgraph": "^1.4.4",
    "lodash": "^4.17.10",
    "lusca": "^1.6.0",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-facebook": "^2.1.1",
    "passport-local": "^1.0.0",
    "pug": "^2.0.3",
    "request": "^2.85.0"
  },
  "devDependencies": {
    "@types/async": "^2.0.49",
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/body-parser": "^1.17.0",
    "@types/compression": "0.0.36",
    "@types/connect-mongo": "0.0.35",
    "@types/dotenv": "^4.0.3",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.11.1",
    "@types/express-session": "^1.15.8",
    "@types/jest": "^22.2.3",
    "@types/jquery": "^3.3.1",
    "@types/lodash": "^4.14.108",
    "@types/mongodb": "^3.0.15",
    "@types/mongoose": "^5.0.10",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.0.0",
    "@types/nodemailer": "^4.6.0",
    "@types/passport": "^0.4.5",
    "@types/passport-facebook": "^2.1.8",
    "@types/request": "^2.47.0",
    "@types/supertest": "^2.0.4",
    "concurrently": "^3.5.1",
    "jest": "^22.4.3",
    "mongoose": "^5.0.16",
    "nodemailer": "^4.6.4",
    "nodemon": "^1.17.3",
    "shelljs": "^0.8.1",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.4",
    "tslint": "^5.9.1",
    "typescript": "^2.8.3"
  }
}
